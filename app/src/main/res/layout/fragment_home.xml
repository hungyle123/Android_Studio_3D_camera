<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_display"
    tools:context=".HomeFragment">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="550dp"
        android:weightSum="11"
        android:layout_gravity="center"
        android:orientation="vertical">

<!--        <ImageView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="200dp"-->
<!--            android:src="@drawable/find_space_logo" />-->

        <RelativeLayout
            android:id="@+id/find_space_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:background="@drawable/find_space_background"
            android:clipToOutline="true">
            <TextView
                android:id="@+id/find_space_txt"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="TÌM MẶT PHẲNG"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:background="@drawable/background_txt" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <RelativeLayout
            android:id="@+id/find_img_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:background="@drawable/find_img_background"
            android:clipToOutline="true">
            <TextView
                android:id="@+id/find_img_txt"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="TÌM HÌNH ẢNH"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:background="@drawable/background_txt" />
        </RelativeLayout>

    </LinearLayout>

</FrameLayout>